@model List<Size>
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a style="color:white; font-size:20px" class="btn btn-success mb-3">Create Size</a>
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        
                         @foreach (Size size in Model)
                        {
                            <tr>
                          <td>
                              @size.Id
                            
                          </td>
                          <td>
                              @size.Title
                          </td>
                             <td>
                                <div class=d-flex>

                                    <div class="Detail">
                                        <a class="btn btn-primary"><i class="mdi mdi-details"></i></a>

                                    </div>

                                    <div class="Edit">
                                        <a class="btn btn-warning"><i class="mdi mdi-table-edit"></i></a>
                                    </div>

                                    <div class="Delete">
                                        <a class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                    </div>

                                </div>
                             </td>
                          </tr>
                        }
                        
                      </tbody>
                    </table>
                  </div>

