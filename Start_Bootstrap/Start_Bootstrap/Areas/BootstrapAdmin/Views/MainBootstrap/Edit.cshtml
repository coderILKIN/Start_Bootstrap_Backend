@model MainBootstrap
@{
    ViewData["Title"] = "Edit";
}

<form method="post" enctype="multipart/form-data">
    <div> <label class="mb-3">Size Title:</label><br/>
    <input asp-for="Title" class="form-control"/><br/>
    <span class=text-danger asp-validation-for="Title"></span>
    </div>
    <div> <label class="mb-3">Size Icon:</label><br/>
    <input asp-for="Icon" class="form-control"/><br/>
    <span class=text-danger asp-validation-for="Icon"></span>
    </div>
    <div> <label class="mb-3">Size SubTitle:</label><br/>
    <input asp-for="SubTitle" class="form-control"/><br/>
    <span class=text-danger asp-validation-for="SubTitle"></span>
    </div>
    <div> <label class="mb-3">Size LogoImage:</label><br/>
    <input asp-for="Photo" class="form-control" accept="image/*"/><br/>
    <span class=text-danger asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit MainBootstrap</button>
    </div>
</form>

