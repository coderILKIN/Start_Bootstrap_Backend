@model MainBootstrap
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a asp-controller="MainBootstrap" asp-action="Create" style="color:white; font-size:20px" class="mb-3 btn btn-success">Create MainBootstrap</a>
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            LogoImage
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Icon
                          </th>
                          <th>
                            SubTitle
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                           <tr>
                          <td>
                            <img style="width:150px;height:150px" src="~/assets/images/@Model.LogoImage"/>
                          </td>
                          <td>
                            @Model.Title
                          </td>
                          <td>
                            <i style="font-size:25px;color:red" class="@Model.Icon"></i>
                          </td>
                          <td>
                            @Model.SubTitle
                          </td>
                          <td>
                            <div class="d-flex">
                                <div class = "detail">
                                    <a asp-controller="MainBootstrap" asp-action="Detail" asp-route-id = "@Model.Id" class="btn btn-warning"><i class="mdi mdi-details"></i></a>
                                </div>
                                <div class="edit">
                                    <a asp-controller="MainBootstrap" asp-action="Edit" asp-route-id = "@Model.Id" class="btn btn-primary"><i class="mdi mdi-tooltip-edit"></i></a>
                                </div>
                                <div class="delete">
                                    <a asp-controller="MainBootstrap" asp-action="Delete" asp-route-id = "@Model.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                </div>
                            </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>



